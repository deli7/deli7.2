<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout

        android:padding="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_width"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/logo1"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/textViewCompanyAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/text_size_medium" />





    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_email"
            android:contentDescription="TODO" />

        <TextView
            android:layout_gravity="center"
            style="@style/largeText"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCompanyEmail" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPhone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_call"
            android:contentDescription="TODO" />

        <TextView
            android:layout_gravity="center"
            style="@style/largeText"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCompanyPhone1" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPhone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_call"
            android:contentDescription="TODO" />

        <TextView
            android:layout_gravity="center"
            style="@style/largeText"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCompanyPhone2" />

    </LinearLayout>

    <include layout="@layout/divider"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChatWithSupport"
        android:text="@string/ui_button_ask_support"
        style="@style/md_button_black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTermsOfUse"
        android:text="@string/ui_terms_of_use"
        style="@style/md_button_black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUsagePolicy"
        android:text="@string/ui_button_policy"
        style="@style/md_button_black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRateApp"
        android:text="@string/ui_button_rate_app"
        style="@style/md_button_black"/>

    <ImageView
        android:id="@+id/btn_telegram"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/telegram"
        android:layout_margin="5dp"
        android:visibility="gone"
        />

</LinearLayout>
