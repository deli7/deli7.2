<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
    <TextView
        android:id="@+id/textViewDriverName"
        style="@style/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="" />

    <RatingBar
        android:rating="3.5"
        android:stepSize="0.5"
        android:numStars="5"
        android:id="@+id/ratingBar"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_about_your_delivery_order" />

    <EditText
        android:id="@+id/editTextFeedbackComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:height="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSubmitReview"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/md_button_black"
            android:layout_margin="3dp"
            android:text="@string/ui_button_submit_review"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonSkipReview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            style="@style/md_button_black"
            android:text="@string/ui_button_skip"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
